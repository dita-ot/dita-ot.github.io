{
  "name": "dita-ot.github.io",
  "version": "1.0.0",
  "description": "DITA-OT Website",
  "scripts": {
    "install": "./node_modules/.bin/parcel build _js/plugins.js _js/main.js --out-dir js",
    "fix:config": "prettier --ignore-path .prettierignore --write \"**/*.{json,yaml,yml}\"",
    "fix:docs": "prettier --ignore-path .prettierignore --write \"**/*.md\"",
    "fix:html": "prettier --ignore-path .prettierignore --write \"**/*.html\"",
    "fix:script": "prettier --ignore-path .prettierignore --write \"**/*.{js,ts}\"",
    "fix:style": "prettier --ignore-path .prettierignore --write \"**/*.scss\"",
    "fix": "npm run fix:config && npm run fix:docs && npm run fix:html && npm run fix:script && npm run fix:style",
    "test:script": "eslint --ignore-path .prettierignore \"**/*.{js,ts}\"",
    "test": "jest && npm run test:script"
  },
  "lint-staged": {
    "*.{html,js,json,md,scss,yaml,yml}": [
      "prettier --write",
      "git add"
    ]
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/dita-ot/dita-ot.github.io.git"
  },
  "license": "Apache-2.0",
  "homepage": "https://github.com/dita-ot/dita-ot.github.io",
  "devDependencies": {
    "@types/jest": "^23.3.13",
    "babel-core": "^6.26.3",
    "babel-preset-es2015": "^6.3.13",
    "es6-promise": "^4.2.5",
    "eslint": "5.12.1",
    "eslint-config-airbnb-base": "^13.1.0",
    "eslint-config-prettier": "4.0.0",
    "eslint-plugin-import": "^2.16.0",
    "eslint-plugin-prettier": "3.0.1",
    "husky": "1.3.1",
    "jest": "^23.6.0",
    "lint-staged": "8.1.0",
    "object.values": "^1.1.0",
    "parcel-bundler": "^1.11.0",
    "prettier": "1.16.1",
    "ts-jest": "^23.10.5",
    "typescript": "^3.2.4",
    "urijs": "^1.19.1",
    "whatwg-fetch": "^3.0.0"
  },
  "dependencies": {
    "jquery": "^3.3.1",
    "lodash": "^4.17.11"
  },
  "husky": {
    "hooks": {
      "pre-commit": "lint-staged"
    }
  }
}
